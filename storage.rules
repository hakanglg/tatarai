rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Genel kurallar - varsayılan olarak erişim reddet
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profil resimleri - kullanıcılar kendi profil resimlerine erişebilir
    match /profile_images/{userId}/{filename} {
      allow read: if request.auth != null; // Herkes profil resimlerini görebilir
      allow write: if request.auth != null && request.auth.uid == userId; // Sadece kendi profiline yazabilir
    }
    
    // Kullanıcıların kendi depolama alanı - kendi resimlerine erişim
    match /user_uploads/{userId}/{allImages=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analiz resimleri - kullanıcılar kendi analizlerinin resimlerine erişebilir
    match /analyses/{userId}/{allImages=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Ortak erişimli resimler - tüm kullanıcılar okuyabilir
    match /public/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if false; // Sadece admin yazabilir
    }
  }
}
