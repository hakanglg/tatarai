rules_version = '2';

// Firebase Storage Security Rules for TatarAI
// GEÇİCİ TEST KURALLARI - DEVELOPMENT İÇİN
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    
    /// Kullanıcının kimlik doğrulaması yapılmış mı?
    function isAuthenticated() {
      return request.auth != null;
    }
    
    /// Dosya boyutu kontrolü (20MB limit)
    function isValidSize() {
      return request.resource.size < 20 * 1024 * 1024;
    }
    
    /// Geçerli görüntü formatı mı?
    function isValidImageType() {
      return request.resource.contentType != null && 
             request.resource.contentType.matches('image/.*');
    }
    
    // ============================================================================
    // DEVELOPMENT RULES - GEÇİCİ AÇIK ERİŞİM
    // ============================================================================
    
    /// GEÇİCİ: Herkes her şeyi yapabilir (test için)
    match /{allPaths=**} {
      allow read, write: if true; // GEÇİCİ: Herkes erişebilir
    }
    
    // ============================================================================
    // PLANT ANALYSIS IMAGES (YORUM SATIRINDA)
    // ============================================================================
    
    // /// Bitki analizi görüntüleri - Basit kural
    // /// Path: analyses/{fileName}
    // match /analyses/{fileName} {
    //   // Authenticated kullanıcılar yükleyebilir
    //   allow create: if isAuthenticated() && isValidSize();
    //   
    //   // Herkes okuyabilir
    //   allow read: if true;
    //   
    //   // Authenticated kullanıcılar silebilir
    //   allow delete: if isAuthenticated();
    // }
  }
}
