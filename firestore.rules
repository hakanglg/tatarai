rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kimlik doğrulama kontrolü
    function isAuth() {
      return request.auth != null;
    }
    
    // Kullanıcının kendi verisine erişim kontrolü
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Admin kontrolü (Başka bir koleksiyonda admin listesi tutularak yapılabilir)
    function isAdmin() {
      return isAuth() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Kullanıcı profilleri - Giriş/kayıt için izin eklendi
    match /users/{userId} {
      // Kullanıcı, kendi verilerini okuyabilir ve yazabilir
      allow get, list: if isAuth();
      allow create: if isAuth() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }
    
    // Analizler - Sadece kendi analizlerine erişim
    match /users/{userId}/analyses/{analysisId} {
      // Kullanıcı, kendi analizlerini okuyabilir ve yazabilir
      allow read, write: if isOwner(userId);
    }
    
    // Ana plant_analyses koleksiyonu - Güvenli ve açık erişim kuralları (Production için)
    match /plant_analyses/{analysisId} {
      // OKUMA: Analizin sahibi okuyabilir (var olan document için)
      allow read: if isAuth() && resource.data.userId == request.auth.uid;
      
      // GÜNCELLEME: Analizin sahibi güncelleyebilir (var olan document için)  
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      
      // SİLME: Analizin sahibi silebilir (var olan document için)
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
      
      // OLUŞTURMA: Authenticated kullanıcı kendi ID'si ile oluşturabilir
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
    }
    
    // Admin kullanıcılarının listesi 
    match /admins/{adminId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // Cihaz token'ları - Notification için
    match /deviceTokens/{tokenId} {
      allow read, write: if isAuth() && request.auth.uid == resource.data.userId;
    }
    
    // Genel okuma izni: Kimlik doğrulaması yapılmış her kullanıcı herhangi bir koleksiyonu okuyabilir
    // Bu geçici bir kural ve güvenli olmadığından sadece DEVELOPMENT ortamında kullanılmalıdır
    match /{document=**} {
      allow read: if isAuth();
    }

    // ============================================================================
    // GEÇİCİ DEVELOPMENT RULES - PRODUCTION'DA KALDIRILMALI!
    // ============================================================================
    
    // Geçici çözüm: Tüm kullanıcı belgelerine yazma erişimi
    // ÖNEMLİ: Bu kural sadece development için geçici!
    match /users/{userId} {
      allow read, write: if isAuth();
    }
    
    // Plant analyses koleksiyonu için geçici açık erişim - DEVELOPMENT ONLY!
    // ÖNEMLİ: Production'da kaldırılmalı ve üstteki spesifik kurallar kullanılmalı!
    match /plant_analyses/{analysisId} {
      // Development için geçici - authenticated kullanıcılar yazabilir
      allow read, write: if isAuth();
    }
  }
} 